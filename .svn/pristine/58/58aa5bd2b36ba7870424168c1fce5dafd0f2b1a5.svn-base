.suggestion-wrap{
	display: flex;
	flex-direction: column;
	.prompt-text{
		padding: 22rpx;
		font-size: 26rpx;
		font-weight: 400;
		color: #999999;
	}
	
	.suggestion-content{
		display: flex;
		flex-direction: column;
		width: 100%;
		//height: 760rpx;
		background: #FFFFFF;
		
		.type-title{
			padding-top: 36rpx;
			padding-left: 22rpx;
			font-size: 32rpx;
			font-weight: 400;
			color: #333333;
		}
		
		.type-tag{
			display: flex;
			padding-top: 16rpx;
			padding-left: 22rpx;
			font-size: 26rpx;
			font-weight: 400;
			color: #666666;
			.tag-item{
			}
		}
		
		.suggestion-box{
			width: 100%;
			padding-top: 36rpx;
			padding-bottom: 36rpx;
			padding-left: 22rpx;
			padding-right: 22rpx;
			//background-color: #007AFF;
			
			.suggestion{
				width: 100%;
				height: 320rpx;
				font-size: 26rpx;
				font-weight: 400;
				color: #999999;
			}
			
		}
		
		.limit-box{
			width: 100%;
			height: 48rpx;
			display: flex;
			justify-content: flex-end;
			align-items: center;
			.limit{
				padding-right: 22rpx;
				font-size: 26rpx;
				font-weight: 400;
				color: #999999;
			}
		}
		
		.image-box{
			width: 100%;
			//height: 180rpx;
			background-color: #FFF;
			padding: 22rpx;
			
		}
		
	}
	
	.suggestion-submit-btn-box{
		padding-top: 120rpx;
		padding-left: 22rpx;
		padding-right: 22rpx;
		
		.suggestion-submit-btn{
			color: white;
			line-height: 80rpx;
		}
	}
	
}