.bill-wrap{
	.top-wrap{
		position: relative;
		height: 360rpx;
		background-image: url('/static/images/charge/balance_bg.png');
		background-size: 100% 360rpx;
		display: flex;
		flex-direction: column;
		
		.user-message{
			display: flex;
			flex-direction: column;
			padding-top: 20rpx;
			padding-left: 30rpx;
			.user-address{
				color: #FFF;
				font-size: 32rpx;
			}
			.user-number{
				color: #FFF;
				padding-top: 12rpx;
				display: flex;
				align-items: center;
				.user-number-label{
					
				}
				.user-number-text{
					
				}
			}
			.user-location{
				color: #FFF;
				padding-top: 12rpx;
				display: flex;
				align-items: center;
				.user-location-icon{
					height: 33rpx;
					width: 33rpx;
					color: #FFF;
					
				}
				.user-location-text{
					padding-left: 12rpx;
				}
			}
		}
	}
	
	.float-wrap{
		position: absolute;
		top: 290rpx;
		width: 100%;
		display: flex;
		flex-direction: column;
		align-items: center;
		.content-wrap{
			width: 90%;
			.bill-sum{
				width: 100%;
				height: 390rpx;
				border-radius: 12rpx;
				background-image: url('/static/images/charge/bill_card.png');
				background-size: 100% 390rpx;
				display: flex;
				flex-direction: column;
				margin-bottom: 12rpx;
				
				.select{
					display: flex;
					align-items: center;
					width: 100%;
					padding-left: 32rpx;
					padding-top: 32rpx;
					.select-year{
						display: flex;
						
						.year-picker{
							width: 100rpx;
						}
						.down-icon{
						}
					}
					.select-month{
						padding-left: 12rpx;
						width: 480rpx;
						
						
						.cur {
							background: #007DFE;
							border-radius: 23px;
							border-bottom: 0px;
							height: 48rpx;
							line-height: 48rpx;
							color: #FFF;
						}
					}
				}
				
				.sum-line{
					display: flex;
					justify-content: space-between;
					padding-top: 32rpx;
					padding-left: 32rpx;
					padding-right: 32rpx;
					.item{
						display: flex;
						flex-direction: column;
						.item-amount{
							font-size: 38rpx;
							font-weight: 600;
						}
						
						.item-label{
							padding-top: 8rpx;
							font-size: 22rpx;
						}
					}
				}
			}
			
			.bill-item{
				//margin-top: 12rpx;
				width: 100%;
				height: 380rpx;
				border-radius: 12rpx;
				background-color: #FFF;
				display: flex;
				flex-direction: column;
				
				.header{
					display: flex;
					justify-content: space-between;
					align-items: center;
					margin-top: 22rpx;
					padding-left: 22rpx;
					padding-right: 22rpx;
					background-color: #EEEEEE;
					.header-item{
						width: 25%;
					}
					.header-item2{
						width: 25%;
						text-align: left;
					}
					.header-item3{
						width: 25%;
					}
					.header-item-right{
						width: 25%;
						text-align: right;
					}
				}
				
				.item-line{
					display: flex;
					justify-content: space-between;
					align-items: center;
					padding: 22rpx;
					
					.line-item{
						width: 25%;
					}
					.line-item2{
						width: 25%;
						text-align: center;
					}
					.line-item3{
						width: 25%;
					}
					.line-item-right{
						width: 25%;
						text-align: right;
					}
				}
				
				.grid-line{
					display: flex;
					justify-content: space-between;
					padding-top: 32rpx;
					padding-left: 32rpx;
					padding-right: 32rpx;
					.item{
						display: flex;
						flex-direction: column;
						.item-amount{
							font-size: 32rpx;
							font-weight: 600;
							color: #2B80D9;
						}
						.item-label{
							padding-top: 8rpx;
							font-size: 22rpx;
						}
					}
				}
			}
			
			
