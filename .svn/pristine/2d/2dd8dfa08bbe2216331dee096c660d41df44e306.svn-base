.user-wrap{
	width: 100%;
	height: 100%;
	
	
	.info-wrap{
		display: flex;
		background-color: #007aff;
		.user-info{
			display: flex;
			align-items: center;
			padding-left: 56rpx;
			width: 480rpx;
			height: 220rpx;
			
			.user-image{
				flex: 3;
				width: 120rpx;
				height: 120rpx;
			}
			
			.user-name{
				flex: 8;
				padding-left: 16rpx;
				width: 280rpx;
				line-height: 30rpx;
				font-size: 30rpx;
				font-weight: 500;
				color: #fff;
			}
		}
	}
	
	.func-wrap{
		//border-radius: 30rpx 30rpx 0 0;
		//padding-top: 30rpx;
		background-color: #fff;
		.func-items{
		}
	}
	
	.logout-btn-box{
		
		padding-top: 60rpx;
		padding-left: 30rpx;
		padding-right: 30rpx;
		.logout-btn{
			color: #FFF;
			line-height: 80rpx;
		}
	}
}



