.balance-wrap{
	.top-wrap{
		position: relative;
		height: 360rpx;
		background-image: url('/static/images/charge/balance_bg.png');
		background-size: 100% 360rpx;
		display: flex;
		flex-direction: column;
		
		.balance{
			display: flex;
			justify-content: center;
			align-items: center;
			padding-top: 28rpx;
			//padding-left: 120rpx;
			.balance-amount{
				width: 280rpx;
				padding-right: 110rpx;
				display: flex;
				flex-direction: column;
				align-items: center;
				
				.balance-amount-text{
					color: #FFF;
					display: flex;
					align-items: baseline;
					.balance-amount-integer{
						font-size: 42rpx;
					}
					
					.balance-amount-decimal{
						
					}
					
				}
				
				.balance-amount-label{
					color: #FFF;
				}
			}
			
			.divid-line{
				//padding-left: 120rpx;
				
			}
			
			.unpaid-amount{
				width: 280rpx;
				padding-left:110rpx;
				display: flex;
				flex-direction: column;
				align-items: center;
				.unpaid-amount-text{
					color: #FFF;
					display: flex;
					align-items: baseline;
					.unpaid-amount-integer{
						font-size: 42rpx;
					}
					
					.unpaid-amount-decimal{
						
					}
				}
				.unpaid-amount-label{
					color: #FFF;
				}
				
				
			}
		}
	}
	
	.float-wrap{
		position: absolute;
		top: 260rpx;
		width: 100%;
		
		display: flex;
		flex-direction: column;
		align-items: center;
		
		.content-wrap{
			//background-color: #18B566;
			width: 90%;
			.function{
				width: 100%;
				height: 180rpx;
				background-color: #FFF;
				border-radius: 12rpx;
				display: flex;
				justify-content: space-around;
				.function-item{
					display: flex;
					flex-direction: column;
					justify-content: center;
					align-items: center;
					.function-image{
						height: 88rpx;
						width: 88rpx;
					}
					.function-name{
						
					}
				}
			}
			
			.record-title{
				display: flex;
				justify-content: center;
				align-items: center;
				padding-top: 42rpx;
				.left-line{
					padding-right: 12rpx;
				}
				.title-text{
					font-size: 38rpx;
				}
				.right-line{
					padding-left: 12rpx;
				}
			}
			
			.record-items{
				display: flex;
				flex-direction: column;
				padding-top: 12rpx;
				.record-item{
					display: flex;
					justify-content: space-between;
					align-items: center;
					background-color: #FFF;
					border-radius: 12rpx;
					height: 120rpx;
					margin-top: 12rpx;
					
					.record-left{
						display: flex;
						align-items: center;
						padding-left: 22rpx;
						.record-icon{
							height: 68rpx;
							width: 68rpx;
						}
						.record-type{
							display: flex;
							flex-direction: column;
							padding-left: 22rpx;
							
							.record-type-name{
								font-size: 35rpx;
								
							}
							
							.record-type-time{
								
							}
							
							
						}
					}
					
					.record-right{
						padding-right: 22rpx;
						.record-amount{
							font-size: 36rpx;
						}
					}
					
					
					
				}
			}
			
			.prompt-text{
				padding-top: 32rpx;
				text-align: center;
				
			}
			
			
		}
	}
	
	
}