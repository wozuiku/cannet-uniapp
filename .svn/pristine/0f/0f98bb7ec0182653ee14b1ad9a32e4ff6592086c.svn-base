.index-wrap{
	height: 100vh;
	.top-wrap{
		position: relative;
		height: 540rpx;
		background-image: url('/static/images/index/home_bg.png');
		background-size: 100% 540rpx;
		display: flex;
		flex-direction: column;
		.topbar{
			display: flex;
			justify-content: space-between;
			width:100%;
			color: #fff;
			padding: 20rpx;
			font-size: 28rpx;
			line-height: 45rpx;
			
			.topbar-tenant{
				padding-left: 16rpx;
				width:420rpx;
				display: flex;
				.select-value{
				}
				.select-icon{
					padding-left: 12rpx;
				}
			}
			
			.topbar-right{
				display: flex;
				justify-content: flex-end;
				
				.topbar-message{
					display: flex;
					flex-direction: column;
					justify-content: center;
					align-items: center;
					
					.topbar-message-text{
						font-size: 22rpx;
					}
				}
				
				.topbar-scan{
					display: flex;
					flex-direction: column;
					justify-content: center;
					align-items: center;
					padding-left: 26rpx;
					.topbar-scan-text{
						font-size: 22rpx;
					}
				}
			}
		}
		
		.balance{
			display: flex;
			color: #fff;
			//justify-content: center;
			.left-arrow{
				display: flex;
				justify-content: center;
				align-items: center;
				padding-left: 12rpx;
				width: 60rpx;
				//height: 60rpx;
				.left-arrow-image{
					width: 30rpx;
					height: 30rpx;
				}
			}
			.balance-items{
				display: flex;
				padding-top: 22rpx;
				.balance-item{
					display: flex;
					flex-direction: column;
					padding-left: 22rpx;
					padding-right: 22rpx;
					width: 330rpx;
					.item-line1{
						display: flex;
						align-items: center;
						.item-line1-text{
							font-size: 35rpx;
							line-height: 48rpx;
						}
						
						.item-line1-arrow{
							padding-left: 12rpx;
						}
					}
					
					.item-line2{
						padding-top: 6rpx;
						display: flex;
						align-items: center;
						.item-line2-text{
							font-size: 26rpx;
						}
					}
					
					.item-line3{
						padding-top: 18rpx;
						display: flex;
						align-items: baseline;
						.item-line3-label{
							color: #FFFFFF90;
							
						}
						.item-line3-integer{
							padding-left: 12rpx;
							font-size: 36rpx;
						}
						
						.item-line3-decimal{
							
						}
						
						.item-line3-currency{
							padding-left: 6rpx;
							font-size: 24rpx;
						}
					}
					
					.charge-btn{
						padding-top: 22rpx;
						.charge-btn-text{
							font-size: 26rpx;
						}
					}
				}
				
				.balance-line{
					border:  solid rgba(255, 255, 255, 0.1);
				}
				
			}
			
			.right-arrow{
				display: flex;
				justify-content: center;
				align-items: center;
				padding-right: 12rpx;
				width: 60rpx;
				//height: 60rpx;
				.right-arrow-image{
					width: 30rpx;
					height: 30rpx;
				}
			}
		}
			
	}
	
	.float-wrap{
		position: absolute;
		top: 400rpx;
		width: 100%;
		
		display: flex;
		flex-direction: column;
		align-items: center;
		
		.content-wrap{
			width: 90%;
			.function{
				.func-image{
					width: 88rpx;
					height: 88rpx;
				}
			}
			
			.notice{
				margin-top: 22rpx;
				display: flex;
				width: 100%;
				height: 80rpx;
				
				.notice_left{
					width: 60rpx;
					display: flex;
					align-items: center;
					.notice_icon{
						padding-left: 20rpx;
					}
					
				}
				
				.notice_right{
					width: 100%;
					display: flex;
					justify-content: space-between;
					align-items: center;
					
					.notice_text{
						width: 480rpx;
						padding-left: 20rpx;
					}
					
					.notice_more{
						padding-right: 20rpx;
						font-size: 26rpx;
					}
				}
			}
			
			.ad{
				margin-top: 22rpx;
				.ad-title{
					display: flex;
					justify-content: space-between;
					
					.ad-title-left{
						font-weight:900;
						color:#5D5D5D;
						font-size:30rpx;
					}
					
					.ad-title-right{
						color: #C9C9CB;
						font-size: 26rpx;
						
					}
					
				}
				.ad-swiper{
					margin-top: 20rpx;
				}
			}
		}
	}
}
