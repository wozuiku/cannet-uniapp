.box-wrap{
	
	// 电表
	.meter-item{
		margin-bottom: 20rpx;
	}
	
	.top-wrap-title{
		overflow: hidden;
		height:200rpx;
		background-image: linear-gradient(to bottom right, #35bcfc, #007aff);
		.top-info{
			margin-top:10rpx;
			padding:0 20rpx;
			color:white;
			.top-titleName{
				font-size:28rpx;
			}
			.top-titleNo{
				font-weight:bold;
				font-size:32rpx;
			}
		}
	}
	// 表号
	.meter-no{
		height: 80rpx;
		line-height:80rpx;
		font-size: 30rpx;
		font-family: PingFang SC;
		font-weight: bold;
		color: #333333;
		padding:0 20rpx;
		background-color:white;
	}
	// 本月用电
	.yd-info{
		height: 650rpx;
		.yd-echarts{
			height: 350rpx;
		}
		.yd-tb-title{
			height: 46rpx;
			background-color: #f6f6f6;
			display: flex;
			font-size: 24rpx;
			align-items: center;
		}
		
		.yd-tb-item1{
			width: 60rpx;
			text-align: center;
		}
		.yd-tb-item2{
			width: 210rpx;
		}
		.yd-tb-item3{
			width: 160rpx;
		}
		.yd-tb-item4{
			width: 160rpx;
		}
		.yd-tb-item5{
			width: 160rpx;
		}
		.yd-tb-info{
			height: 56rpx;
			font-size: 26rpx;
			display: flex;
			font-size: 24rpx;
			align-items: center;
		}
		.yd-tb-d{
			font-weight: bold;
			text-indent:50rpx;
		}
		.yd-tb-hsg{
			// 一杠
			font-size: 40rpx;
			color: #999999;
		}
		.yd-tb-hs{
			// 灰色
			color: #999999;
		}
		.yd-tb-s{
			// 同比环比升
			color: #FF5726;
		}
		.yd-tb-j{
			// 同比环比降
			color: #39C678;
		}
	}
	// 量费趋势
	.lf-info{
		height: 454rpx;
		.lf-item-title{
			// 量费趋势 标题
			height: 80rpx;
			display: flex;
			justify-content:space-between;
			.item-title{
				line-height: 80rpx;
				font-weight: bold;
				font-size: 30rpx;
				color: #333333;
			}
			.lf-title-right{
				height: 80rpx;
				display: flex;
				align-items: center;
				font-size: 24rpx;
				text-align: center;
				.lf-title-dl{
					width: 76rpx;
					height: 50rpx;
					line-height: 50rpx;
					border:1px solid #007cff ;
					border-right: 0px solid red;
					border-radius: 20rpx 0 0 20rpx;
				}
				.lf-title-df{
					height: 50rpx;
					line-height: 50rpx;
					width: 76rpx;
					border:1px solid #007cff ;
					border-left: 0px solid red;
					border-radius: 0 20rpx 20rpx 0rpx;
				}
				.lf-selectd{
					// 量费趋势 电量 电费选中样式
					background-color: #007cff;
					color: white;
				}
				.lf-noselectd{
					background-color: white;
					color: #007cff;
				}
			}
		}
		// 图表
		.lf-echarts{
			// 量费趋势 图标
			height: 350rpx; 
			// background-color: #ccc;
		}
	}
	// 年累计用电量
	.lj-info{
		.lj-center{
			display: flex;
			justify-content: space-between;
		}
		// 左边的图表
		.lj-center-left{
			width: 400rpx;
			height: 350rpx;
			// background-color: #ccc;
		}
		// 右边
		.lj-center-right{
			width: 330rpx;
			height: 350rpx;
			.lj-center-title{
				height: 70rpx;
				display: flex;
				justify-content: center;
				align-items: center;
				.lj-center-title-item{
					font-size: 28rpx;
					font-weight: bold;
					padding: 0 6rpx;
				}
				.img-icon{
					width: 80rpx;
				}
			}
			.lj-center-icon{
				height: 140rpx;
				display: flex;
				align-items: center;
				justify-content: space-around;
				.img-icon{
					width: 110rpx;
					height: 110rpx;
				}
			}
			.lj-center-val{
				padding:10rpx 0;
				font-size: 26rpx;
				font-weight: bold;
				height: 60rpx;
				display: flex;
				// align-items: center;
				text-align: center;
				.lj-center-dl{
					width: 165rpx;
				}
				.lj-center-tp{
					width: 165rpx;
				}
			}
			.lj-center-bt{
				color: #666666;
				font-size: 26rpx;
				display: flex;
				justify-content: space-around;
				height: 80rpx;
				line-height: 70rpx;
			}
			
		}
		// 底部的文字
		.lj-btval{
			padding: 6rpx 0 12rpx 0;
			line-height: 46rpx;
			text-align: justify;
			font-size: 26rpx;
			font-family: PingFang SC;
			font-weight: 400;
			color: #333333;
			.lj-btval-color{
				font-size: 26rpx;
				font-family: PingFang SC;
				font-weight: bold;
				color: #007CFF;
			}
		}
	}
	
	// 下面的公共的
	.item-title{
		// 标题
		height: 80rpx;
		line-height: 80rpx;
		font-weight: bold;
		font-size: 30rpx;
		color: #333333;
	}
	.info-pdding{
		padding:0 20rpx;
	}
	.border-bt{
		// 下边框
		border-bottom:0.5rpx solid #ccc;
	}
	.bg-color{
		background-color:white;
	}
	// 标题
	.title-bt{
		font-size: 22rpx;
		color: #a1a1a1;
	}
}

